{
  "name": "lockblock",
  "version": "1.0.4",
  "productName": "LockBlock",
  "description": "LockBlock Lockdown Edition",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "author": "Adrian McVoy",
  "license": "ISC",
  "build": {
    "appId": "lockblock",
    "nsis": {
      "include": "build/installer.nsh",
      "createDesktopShortcut": false
    },
    "publish": [
      {
        "provider": "github"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "publish": [
        "github"
      ]
    }
  },
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "about-window": "^1.13.4",
    "electron-log": "^4.3.0",
    "electron-updater": "^4.3.5"
  }
}
